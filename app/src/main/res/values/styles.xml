<resources>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="LARIMTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/TextStyleBlue</item>
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorAccent">@color/darkyellow</item>
        <item name="android:colorForeground">@color/darkblue</item>
    </style>

    <style name="LARIMActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textViewStyle">@style/TextStyleWhite</item>
    </style>

    <style name="TextStyleBlue" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextStyleBlueYellow" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/darkyellow_selector</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextStyleBlueYellowMedium" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/darkyellow_selector</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextStyleYellow" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/darkyellow</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="TextStyleWhite" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextStyleBig" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextStyleMicro" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonYellowStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@color/darkyellow_selector</item>
        <item name="android:background">@drawable/darkyellow_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ButtonBlueStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@color/darkblue_selector</item>
        <item name="android:background">@drawable/darkblue_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
